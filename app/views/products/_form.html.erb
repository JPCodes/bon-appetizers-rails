<%= render 'layouts/errors', object: @product %>

<% if flash[:success] %>
  <div class="success">Flash: <%= flash[:success] %></div>
<% end %>

<% if flash[:warning] %>
  <div class="warning">Flash: <%= flash[:warning] %></div>
<% end %>

<%= form_for(@product, multipart: true) do |f| %>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
    <%= f.label :price %>
    <%= f.number_field :price, :step => "0.01", class: 'form-control' %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit 'Submit and Upload', class: 'btn btn-primary' %>
  </div>
<% end %>
